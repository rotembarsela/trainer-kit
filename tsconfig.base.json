{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@rbs/ui": ["packages/ui"],
      "@rbs/utils": ["packages/utils"]
    },
    "strict": true,
    "jsx": "react-jsx",
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node"
  },
  "include": ["apps/**/*", "packages/**/*"],
  "exclude": ["node_modules", "dist"]
}
